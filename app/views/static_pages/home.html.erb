<% if signed_in? %>

	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
		<div class="span8">
			<h1>Posts: </h1>
			<%= render 'shared/feed' %>
		</div>
	</div>

<% else %>

<div class="center hero-unit">
	<h1>Sample App</h1>
	<p>
		This is the home page for the
		<a href="http://railstutorial.org/">Ruby on Rails Sample App</a>
		sample application.
	</p>
	<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primaty" %>
</div>
<%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>

<% end %>